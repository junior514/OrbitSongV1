<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema principal -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/secondary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/spotify_green</item>
        <item name="colorSecondaryVariant">@color/accent_purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Estilo para botones principales -->
    <style name="ButtonStyle" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="backgroundTint">@color/spotify_green</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para botones secundarios -->
    <style name="ButtonSecondaryStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">25dp</item>
    </style>

    <!-- Estilo para cards -->
    <style name="CardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background_translucent</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <!-- Estilo para SearchView -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/white_translucent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Estilo para títulos principales - SIN FUENTE PERSONALIZADA -->
    <style name="TitleTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para subtítulos - SIN FUENTE PERSONALIZADA -->
    <style name="SubtitleTextStyle">
        <item name="android:textColor">@color/white_translucent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Estilo para texto de secciones - SIN FUENTE PERSONALIZADA -->
    <style name="SectionTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>