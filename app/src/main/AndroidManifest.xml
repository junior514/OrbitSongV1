<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- ✅ PERMISOS DE AUDIO AGREGADOS -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- Declarar que la app usa funciones de audio -->
    <uses-feature
        android:name="android.hardware.audio.output"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OrbitSongV1"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- ✅ CORREGIDO: LibraryActivity con configuración completa -->
        <activity
            android:name=".activities.LibraryActivity"
            android:exported="false"
            android:label="Mi Biblioteca Musical"
            android:parentActivityName=".activities.HomeActivity"
            android:theme="@style/Theme.OrbitSongV1">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.HomeActivity" />
        </activity>

        <!-- ✅ MusicPlayerActivity con configuración completa -->
        <activity
            android:name=".activities.MusicPlayerActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.OrbitSongV1">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.HomeActivity" />
        </activity>

        <!-- MainActivity - Launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.OrbitSongV1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginActivity -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.OrbitSongV1" />

        <!-- HomeActivity -->
        <activity
            android:name=".activities.HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.OrbitSongV1"
            tools:ignore="MissingClass" />

    </application>

</manifest>